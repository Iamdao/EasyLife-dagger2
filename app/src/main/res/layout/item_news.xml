<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/NewsCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20px">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="乐视投资太疯狂 贾跃亭在进行一次怎样的豪赌"
            android:textSize="36px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px">

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国经济网" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260px"
                android:text="2016-05-30 11:43:37" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_praise"
                android:layout_width="wrap_content"
                android:layout_height="46px"
                android:background="@drawable/bg_praise_tag"
                android:gravity="center"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="赞 0"
                android:textColor="#fff"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_step"
                android:layout_width="wrap_content"
                android:layout_height="46px"
                android:layout_marginLeft="60px"
                android:background="@drawable/bg_stamp_tag"
                android:gravity="center"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="踩 0"
                android:textColor="#fff"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="46px"
                android:layout_marginLeft="60px"
                android:background="@drawable/bg_collect_tag"
                android:gravity="center"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="收藏 0"
                android:textColor="#fff"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</android.support.v7.widget.CardView>